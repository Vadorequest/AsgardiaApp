root = true

# Unix-style newlines with a newline ending for every file
[*]
end_of_line = lf
insert_final_newline = true

# Most common files
[*.{coffee,js,jsx,html,sass,less,css,py,yml}]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[package.json,.*rc]
indent_style = space
indent_size = 2
